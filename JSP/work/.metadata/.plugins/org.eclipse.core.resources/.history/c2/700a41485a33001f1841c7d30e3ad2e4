package com.human.ex;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class shoppingList
 */
@WebServlet("/shoppingList")
public class shoppingList extends HttpServlet {
	private static final long serialVersionUID = 1L;

	/**
	 * @see HttpServlet#HttpServlet()
	 */
	public shoppingList() {
		super();
		// TODO Auto-generated constructor stub
	}

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		request.setCharacterEncoding("UTF-8");
		// 1. 사용자 입력 값 받아오기

		String[] material = request.getParameterValues("material");// 물건 이름
		// 할인 내용
		String gender = request.getParameter("gender");
		String[] coupon = request.getParameterValues("coupon");

		// 2. 구입 물건 정가
		int sum = 0;
		for (int i = 0; i < material.length; i++) {
			switch (material[i]) {
			case "tissue":
				sum += 5000;
				break;
			case "oil":
				sum += 8000;
				break;
			case "greenOnion":
				sum += 3000;
				break;
			case "eggplant":
				sum += 3000;
				break;
			default:
			}
		}
		// 3. 할인금액
		double discount = 0;
		double discountSum=0;
		switch (gender) {
		case "female":
			discount = discount + (sum - (sum * 0.05));
			for (int i = 0; i < coupon.length; i++) {
				switch (coupon[i]) {
				case "0.05":
					discount = discount + 0.05;
					break;
				case "0.1":
					discount = discount + 0.1;
					break;
				case "0.15":
					discount = discount + 0.15;
					break;
				case "0.2":
					discount = discount + 0.2;
					break;
				}
				break;
			}
			discountSum = sum - (sum * discount);
		case "male":
			for (int i = 0; i < coupon.length; i++) {
				switch (coupon[i]) {
				case "0.05":
					discount = discount + 0.05;
					break;
				case "0.1":
					discount = discount + 0.1;
					break;
				case "0.15":
					discount = discount + 0.15;
					break;
				case "0.2":
					discount = discount + 0.2;
					break;
				}
			}
			discountSum = sum - (sum * discount);
		}
		// 결과 출력 구입 물건 정가/할인가 /할인내용
		response.setContentType("text/html; charset=UTF-8");
		PrintWriter out = response.getWriter();
		out.println("<html>");
		out.println("<body>");
		out.println("구매한 물풀은");
			for (String item : material) {
				out.println(item + " ");
			}
		out.println("<br>원가 금액:" + sum + "<br>");
		out.println("할인 후 금액:" + discountSum+"<br>");
		out.println("할인 내용:");
		if(gender!=null) {
			out.println(gender+"<br>");
		}
		for(int i=0; i<coupon.length;i++) {
			out.println(coupon[i]+",");
		}
		out.println("</body>");
		out.println("</html>");
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}

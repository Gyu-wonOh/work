<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.reservation.dao.reviewDao">
	<insert id="reviewCreate">
		insert into review (reviewId,business_regi_num,reviewContent,reviewName,reviewWriteTime,reviewUpdateTime,reviewEtc,reviewGroup,reviewDelete) 
		values (reviewId.nextval,#{business_regi_num},#{reviesContent},#{reviewName},#{reviewWriteTime},#{reviewUpdateTime},#{reviewEtc},#{reviewGroup},#{reviewDelete})
	</insert>
	<select id="reviewList">
		select * from review
	</select>
	<update id="reviewUpdate">
		update review set review=#{reviewContent},reviewUpdateTime=SYSDATE where reviewId=#{reviewId}	
	</update>
	<delete id="reviewDelete">
		update review set reviewDelete='Y' where reviewId = #{reviewId}
	</delete>
</mapper>